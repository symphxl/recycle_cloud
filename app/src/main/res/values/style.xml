<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tabLayoutTheme" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
<!--        <item name="tabBackground">@color/black</item> &lt;!&ndash; 背景颜色 &ndash;&gt;-->
        <item name="tabTextColor">@color/grey</item> <!-- 字体颜色 -->
        <item name="tabTextAppearance">@style/tabLayoutTheme</item>
        <item name="tabIndicatorColor">@color/sky_blue</item> <!-- 指示线颜色 -->
        <item name="tabIndicatorHeight">5dp</item> <!-- 指示线高度 -->
        <item name="tabIndicatorFullWidth">false</item><!--指示线与字等宽-->
        <item name="tabSelectedTextColor">@color/sky_blue</item> <!-- 选中的字体颜色 -->
        <item name="tabGravity">center</item><!--center：居中 fill：充满-->
    </style>

</resources>